---
import LandingPage from "../layouts/LandingPage.astro";
import {
  InteractiveDemo,
  FeatureCard,
  CounterWidget,
} from "../components/react";

const pageData = {
  title: "Boost Your Productivity with Smart Task Management",
  description:
    "Discover the ultimate productivity app that helps developers and teams manage tasks efficiently. Built with React and optimized for performance.",
  keywords: [
    "productivity",
    "task management",
    "react app",
    "developer tools",
    "team collaboration",
  ],
  canonical: "https://shaggy-satellite.com/productivity-app",
  ogImage: "/og-productivity.jpg",
  jsonLd: {
    type: "SoftwareApplication" as const,
    data: {
      name: "Shaggy Satellite Productivity App",
      description: "Smart task management for developers and teams",
      applicationCategory: "ProductivityApplication",
      operatingSystem: "Web",
      offers: {
        "@type": "Offer",
        price: "0",
        priceCurrency: "USD",
      },
    },
  },
  tracking: {
    googleAnalyticsId: "GA-XXXXXX-X",
    googleTagManagerId: "GTM-XXXXXXX",
  },
  social: {
    twitterSite: "@shaggysatellite",
    githubUrl: "https://github.com/shaggy-satellite",
    linkedinUrl: "https://linkedin.com/company/shaggy-satellite",
  },
};
---

<LandingPage
  {...pageData}
  layout="hero"
  theme="light"
  focusMode={true}
  showNavigation={false}
  showFooter={false}
>
  <div slot="hero" class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        Transform Your Workflow with
        <span class="highlight">Smart Task Management</span>
      </h1>
      <p class="hero-description">
        The ultimate productivity app built for developers who demand
        efficiency. Manage tasks, track progress, and collaborate seamlessly
        with your team.
      </p>
      <div class="hero-actions">
        <a href="#demo" class="btn btn-primary">Try Live Demo</a>
        <a href="/pricing" class="btn btn-secondary">View Pricing</a>
      </div>
    </div>
    <div class="hero-visual">
      <InteractiveDemo
        title="Interactive Task Manager"
        description="Drag the slider to see real-time progress tracking"
        initialValue={75}
        min={0}
        max={100}
        unit="%"
        client:load
      />
    </div>
  </div>

  <div slot="features" class="features-section">
    <div class="container">
      <h2 class="section-title">Powerful Features for Modern Teams</h2>
      <div class="features-grid">
        <FeatureCard
          title="Smart Task Organization"
          description="AI-powered categorization and priority suggestions to keep your workflow optimized."
          icon="ðŸŽ¯"
          isHighlighted={true}
          client:visible
        />
        <FeatureCard
          title="Real-time Collaboration"
          description="Work together seamlessly with live updates and instant notifications."
          icon="ðŸ‘¥"
          client:visible
        />
        <FeatureCard
          title="Advanced Analytics"
          description="Deep insights into your productivity patterns and team performance metrics."
          icon="ðŸ“Š"
          client:visible
        />
        <FeatureCard
          title="API Integration"
          description="Connect with your favorite tools through our comprehensive REST API."
          icon="ðŸ”Œ"
          client:visible
        />
      </div>
    </div>
  </div>

  <div slot="demo" class="demo-section">
    <div class="container">
      <h2 class="section-title">See It In Action</h2>
      <div class="demo-grid">
        <div class="demo-item">
          <CounterWidget
            title="Tasks Completed Today"
            target={247}
            suffix=" tasks"
            description="Across all team members"
            client:visible
          />
        </div>
        <div class="demo-item">
          <CounterWidget
            title="Time Saved"
            target={3.5}
            suffix=" hours"
            description="Average time saved per day"
            client:visible
          />
        </div>
        <div class="demo-item">
          <CounterWidget
            title="Team Productivity"
            target={89}
            suffix="%"
            description="Overall efficiency improvement"
            client:visible
          />
        </div>
      </div>
    </div>
  </div>

  <div slot="cta" class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Boost Your Productivity?</h2>
        <p class="cta-description">
          Join thousands of developers who have transformed their workflow with
          our app.
        </p>
        <div class="cta-actions">
          <a href="/signup" class="btn btn-primary btn-large"
            >Start Free Trial</a
          >
          <a href="/contact" class="btn btn-outline">Contact Sales</a>
        </div>
      </div>
    </div>
  </div>
</LandingPage>

<style>
  .hero-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    color: var(--color-text);
  }

  .highlight {
    color: var(--color-primary);
    position: relative;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .btn-secondary:hover {
    background: var(--color-primary);
    color: white;
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
  }

  .btn-outline {
    background: transparent;
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .btn-outline:hover {
    background: var(--color-bg-dark);
  }

  .features-section {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    color: var(--color-text);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .demo-section {
    padding: var(--spacing-2xl) 0;
  }

  .demo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
  }

  .demo-item {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-xl);
    text-align: center;
    box-shadow: var(--shadow-sm);
  }

  .cta-section {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-2xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
  }

  .cta-description {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    opacity: 0.9;
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  @media (max-width: 768px) {
    .hero-section {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-actions {
      flex-direction: column;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
