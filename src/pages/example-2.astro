  keywords: [
    "design tools",
    "creative software",
    "graphic design",
    "ui design",
    "collaboration",
    "templates",
  ],
  canonical: "https://shaggy-satellite.com/creative-tools",
  ogImage: "/og-creative.jpg",
  jsonLd: {
    type: "SoftwareApplication" as const,
    data: {
      name: "Shaggy Satellite Creative Tools",
      description: "Professional design and creative collaboration platform",
      applicationCategory: "DesignApplication",
      operatingSystem: "Web",
      offers: {
        "@type": "Offer",
