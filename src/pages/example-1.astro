---
import LandingPage from "../layouts/LandingPage.astro";
import {
  InteractiveDemo,
  FeatureCard,
  CounterWidget,
} from "../components/react";

const pageData = {
  title: "Advanced Analytics Dashboard for Data-Driven Decisions",
  description:
    "Unlock powerful insights with our React-based analytics dashboard. Real-time data visualization, custom reports, and intelligent forecasting for modern businesses.",
  keywords: [
    "analytics",
    "dashboard",
    "data visualization",
    "business intelligence",
    "react dashboard",
    "reporting",
  ],
  canonical: "https://shaggy-satellite.com/analytics-dashboard",
  ogImage: "/og-analytics.jpg",
  jsonLd: {
    type: "SoftwareApplication" as const,
    data: {
      name: "Shaggy Satellite Analytics Dashboard",
      description: "Advanced analytics and data visualization platform",
      applicationCategory: "BusinessApplication",
      operatingSystem: "Web",
      offers: {
        "@type": "Offer",
        price: "29.99",
        priceCurrency: "USD",
      },
    },
  },
  tracking: {
    googleAnalyticsId: "GA-XXXXXX-X",
    bingUetId: "BING-XXXXXX",
  },
  social: {
    twitterSite: "@shaggysatellite",
    linkedinUrl: "https://linkedin.com/company/shaggy-satellite",
  },
};
---

<LandingPage
  {...pageData}
  layout="split"
  theme="gradient"
  focusMode={true}
  showNavigation={false}
  showFooter={false}
>
  <div slot="hero" class="hero-section">
    <div class="hero-content">
      <div class="hero-badge">📊 Analytics Platform</div>
      <h1 class="hero-title">
        Make Data-Driven Decisions with
        <span class="highlight">Advanced Analytics</span>
      </h1>
      <p class="hero-description">
        Transform your raw data into actionable insights with our powerful
        analytics dashboard. Real-time visualization, predictive analytics, and
        custom reporting tools.
      </p>
      <div class="hero-stats">
        <div class="stat-item">
          <CounterWidget
            target={99.9}
            suffix="%"
            description="Uptime"
            client:visible
          />
        </div>
        <div class="stat-item">
          <CounterWidget
            target={50}
            suffix="+"
            description="Integrations"
            client:visible
          />
        </div>
        <div class="stat-item">
          <CounterWidget
            target={10000}
            prefix="$"
            description="Avg. ROI"
            client:visible
          />
        </div>
      </div>
    </div>
    <div class="hero-visual">
      <InteractiveDemo
        title="Real-time Data Visualization"
        description="Watch live metrics update in real-time"
        initialValue={68}
        min={0}
        max={100}
        unit="%"
        client:load
      />
    </div>
  </div>

  <div slot="features" class="features-section">
    <div class="container">
      <h2 class="section-title">Comprehensive Analytics Suite</h2>
      <div class="features-grid">
        <FeatureCard
          title="Real-time Monitoring"
          description="Track key metrics and KPIs with live updates and instant alerts."
          icon="📈"
          isHighlighted={true}
          client:visible
        />
        <FeatureCard
          title="Custom Dashboards"
          description="Build personalized dashboards with drag-and-drop widgets and layouts."
          icon="🎛️"
          client:visible
        />
        <FeatureCard
          title="Predictive Analytics"
          description="AI-powered forecasting to anticipate trends and optimize strategies."
          icon="🔮"
          client:visible
        />
        <FeatureCard
          title="Data Export"
          description="Export reports in multiple formats with automated scheduling."
          icon="📤"
          client:visible
        />
        <FeatureCard
          title="API Access"
          description="Integrate with your existing tools through our comprehensive API."
          icon="🔗"
          client:visible
        />
        <FeatureCard
          title="Team Collaboration"
          description="Share insights and collaborate on reports with your team."
          icon="🤝"
          client:visible
        />
      </div>
    </div>
  </div>

  <div slot="demo" class="demo-section">
    <div class="container">
      <h2 class="section-title">Live Analytics Demo</h2>
      <div class="demo-container">
        <div class="demo-metrics">
          <div class="metric-card">
            <h3>Revenue Growth</h3>
            <CounterWidget
              target={24.7}
              suffix="%"
              description="Month over month"
              client:visible
            />
          </div>
          <div class="metric-card">
            <h3>User Engagement</h3>
            <CounterWidget
              target={87}
              suffix="%"
              description="Daily active users"
              client:visible
            />
          </div>
          <div class="metric-card">
            <h3>Conversion Rate</h3>
            <CounterWidget
              target={12.3}
              suffix="%"
              description="Overall conversion"
              client:visible
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div slot="cta" class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Unlock Your Data Potential?</h2>
        <p class="cta-description">
          Start your free 14-day trial and see how our analytics platform can
          transform your business.
        </p>
        <div class="cta-actions">
          <a href="/signup" class="btn btn-primary btn-large"
            >Start Free Trial</a
          >
          <a href="/demo" class="btn btn-secondary">Schedule Demo</a>
        </div>
        <p class="cta-note">No credit card required • Cancel anytime</p>
      </div>
    </div>
  </div>
</LandingPage>

<style>
  .hero-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
    min-height: 80vh;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    color: var(--color-text);
  }

  .highlight {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xl);
  }

  .stat-item {
    text-align: center;
    padding: var(--spacing-lg);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-lg);
    backdrop-filter: blur(10px);
  }

  .features-section {
    background: var(--color-bg);
    padding: var(--spacing-2xl) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    color: var(--color-text);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-lg);
  }

  .demo-section {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl) 0;
  }

  .demo-container {
    background: var(--color-bg);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-xl);
    box-shadow: var(--shadow-lg);
  }

  .demo-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
  }

  .metric-card {
    background: var(--color-bg-light);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    text-align: center;
    border: 1px solid var(--color-border);
  }

  .metric-card h3 {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-light);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-section {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    color: white;
    padding: var(--spacing-2xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
  }

  .cta-description {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    opacity: 0.9;
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-lg);
  }

  .cta-note {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border-color: white;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--color-primary);
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-stats {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
